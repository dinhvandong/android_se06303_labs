<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/>  <!-- Shadow Color -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item android:top="4dp" android:left="4dp"> <!-- Offset for shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Main Shape -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>
