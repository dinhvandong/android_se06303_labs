<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3B3B3B"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <EditText
            android:textColorHint="@color/white"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:hint="10 + 2 - 3 + 6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#4B4B4B"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:text="C"
               />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="1dp"

            android:layout_weight="1"
            android:gravity="center"
            android:background="#4B4B4B"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:text="+/_"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_margin="1dp"

            android:layout_weight="1"
            android:gravity="center"
            android:background="#4B4B4B"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="%"
                android:textColor="@color/white"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#EF9A3A"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text=":"
                android:textColor="@color/white"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="7"
            android:layout_weight="1"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="8"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="9"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="x"
            android:backgroundTint="#EF9A3A"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="4"
            android:layout_weight="1"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="5"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="6"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="-"
            android:backgroundTint="#EF9A3A"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="1"
            android:layout_weight="1"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="2"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="3"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="+"
            android:backgroundTint="#EF9A3A"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:textColor="@color/white"

            android:textSize="50sp"
            android:text="0"
            android:layout_weight="2"
            android:backgroundTint="#666667"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:layout_weight="1"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:text="."
            android:backgroundTint="#666666"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:textColor="@color/white"

            android:layout_weight="1"
            android:textSize="50sp"
            android:text="="
            android:backgroundTint="#EF9A3A"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </LinearLayout>




</LinearLayout>